{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["@playwright/test", "node"]
  },
  "include": ["tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist", "next-js", "script"]
}
