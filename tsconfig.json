    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "types": ["@playwright/test"]
